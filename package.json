{
    "name": "ernestwell",
    "private": true,
    "version": "1.0.0",
    "workspaces": [
      "client",
      "server"
    ],
    "scripts": {
      "install": "npm install --workspaces",
      "dev": "concurrently \"npm run dev -w client\" \"npm run dev -w server\"",
      "build": "npm run build -w client",
      "start": "npm run start -w server",
      "deploy": "vercel --prod"
    },
    "devDependencies": {
      "concurrently": "^8.2.2"
    }
  }
  